router.get('/:userId/:year', async (req, res) => {
  const { userId, year } = req.params;
  try {
    const [records] = await db.execute(
      'SELECT month, amount FROM financial_records WHERE user_id = ? AND year = ?',
      [userId, year]
    );
    res.json(records);
  } catch (err) {
    res.status(500).json({ error: 'Retrieval failed', details: err.message });
  }
});
